{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "outDir": "./lib",
        "sourceMap": true,
        "noLib": false,
        "moduleResolution": "node",
        "removeComments": false,
        "stripInternal": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}